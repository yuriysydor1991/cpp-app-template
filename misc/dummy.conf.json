
{
  "name": "graphviz",
  "buildsystem": "autotools",
  "config-opts": [
    "--enable-network", 
    "--disable-documentation", 
    "--disable-static",
    "--enable-shared",
    "--without-gmodule"
  ],
  "sources": [
    {
      "type": "archive",
      "url": "https://gitlab.com/api/v4/projects/4207231/packages/generic/graphviz-releases/10.0.1/graphviz-10.0.1.tar.gz",
      "sha256": "72e1a575e9c382c4fd2267837962bc4582b3d9ad746e338cd8024bdeca124f32"
    }
  ]
},
{
  "name": "boost",
  "buildsystem": "simple",
  "build-options": {
    "env": {
      "CXXFLAGS": "-fPIC",
      "CFLAGS": "-fPIC"
    }
  },
  "sources": [
    {
      "type": "archive",
      "url": "https://archives.boost.io/release/1.84.0/source/boost_1_84_0.tar.bz2",
      "sha256": "cc4b893acf645c9d4b698e9a0f08ca8846aa5d6c68275c14c3e7949c24109454"
    }
  ],
  "build-commands": [
    "./bootstrap.sh",
    "./b2 --prefix=/app --with-filesystem --with-system --with-timer --with-chrono install"
  ]
},
{
  "name": "mm-common",
  "buildsystem": "autotools",
  "config-opts": [
    "--enable-network", 
    "--disable-documentation", 
    "--disable-static",
    "--enable-shared",
    "--without-gmodule"
  ],
  "sources": [
    {
      "type": "git",
      "url": "https://gitlab.gnome.org/GNOME/mm-common.git",
      "tag": "1.0.6"
    }
  ],
  "build-options": {
    "build-args": [ "--share=network" ]
  }
},
{
  "name": "libsigc++",
  "buildsystem": "meson",
  "config-opts": ["-Dbuild-documentation=false"],
  "sources": [
    {
      "type": "git",
      "url": "https://github.com/libsigcplusplus/libsigcplusplus.git",
      "tag": "3.6.0"
    }
  ],
  "build-options": {
    "build-args": [ "--share=network" ]
  },
  "dependencies": [
    {
      "name": "boost",
      "type": "module",
      "buildsystem": "meson",
      "config-opts": ["-Dbuild-documentation=false"]
    }
  ]
},
{
  "name": "cairomm",
  "buildsystem": "meson",
