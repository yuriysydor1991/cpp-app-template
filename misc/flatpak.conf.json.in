{
  "id": "${FLATPAK_PROJECT_URL}",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "${PROJECT_BINARY_NAME}",
  "modules": [
    {
      "name": "boost",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/boostorg/boost/releases/download/boost-1.88.0/boost-1.88.0-b2-nodocs.tar.xz",
          "sha256": "ad9ce2c91bc0977a7adc92d51558f3b9c53596bb88246a280175ebb475da1762"
        }
      ],
      "build-commands": [
        "./bootstrap.sh",
        "./b2 --prefix=/app -j$(nproc) threading=multi --with-system --with-thread --with-chrono --with-date_time install"
      ]
    },
    {
      "name": "${PROJECT_NAME}",
      "buildsystem": "cmake",
      "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
      "sources": [
        {
          "type": "dir",
          "path": "${CMAKE_SOURCE_DIR}"
        }
      ]
    }
  ],
  "finish-args": [
    "--share=network"
  ]
}
