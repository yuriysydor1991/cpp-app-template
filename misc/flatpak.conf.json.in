{
  "id": "${FLATPAK_PROJECT_URL}",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.8",
  "sdk": "org.kde.Sdk",
  "command": "${PROJECT_BINARY_NAME}",
  "modules": [
    {
      "name": "${PROJECT_NAME}",
      "buildsystem": "cmake",
      "config-opts": ["-DCMAKE_BUILD_TYPE=Release"],
      "sources": [
        {
          "type": "dir",
          "path": "${CMAKE_SOURCE_DIR}"
        }
      ]
    }
  ],
  "finish-args": [
    "--share=ipc", 
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ]
}
