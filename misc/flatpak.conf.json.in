{
  "id": "${FLATPAK_PROJECT_URL}",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "${PROJECT_BINARY_NAME}",
  "modules": [
    {
      "name": "boost",
      "buildsystem": "simple",
       "sources": [
        {
          "type": "archive",
          "url": "https://archives.boost.io/release/1.77.0/source/boost_1_77_0.tar.bz2",
          "sha256": "fc9f85fc030e233142908241af7a846e60630aa7388de9a5fafb1f3a26840854"
        }
      ],
      "build-commands": [
        "./bootstrap.sh",
        "./b2 --prefix=/app --with-system --with-thread --with-chrono --with-date_time install"
      ]
    },
    {
      "name": "libtirpc",
      "buildsystem": "autotools",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/libtirpc/libtirpc/1.3.4/libtirpc-1.3.4.tar.bz2",
          "sha256": "1e0b0c7231c5fa122e06c0609a76723664d068b0dba3b8219b63e6340b347860"
        }
      ],
      "config-opts": [
        "--disable-gssapi"
      ],
      "cleanup": [
        "/bin",
        "/share",
        "*.la",
        "*.a"
      ]
    },
    {
      "name": "libmysqlclient",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/mysql/mysql-server.git",
          "branch": "mysql-9.3.0",
          "x-checker-data": {
            "type": "git",
            "tag-pattern": "^mysql-9\\.3\\..*$"
          }
        }
      ],
      "cmake": true,
      "config-opts": [
        "-DDOWNLOAD_BOOST=0",
        "-DWITH_BOOST=system",
        "-DWITH_UNIT_TESTS=OFF",
        "-DWITH_SERVER=OFF",
        "-DWITH_EMBEDDED_SERVER=OFF",
        "-DWITHOUT_SERVER=ON",
        "-DWITHOUT_DOCS=ON",
        "-DWITHOUT_MAN=ON",
        "-DWITH_SSL=system",
        "-DWITH_ZLIB=system",
        "-DWITH_LIBWRAP=OFF"
      ],
      "cleanup": [
        "/bin",
        "/lib/mysql/plugin",
        "/share",
        "*.la",
        "*.pdb"
      ]
    },
    {
      "name": "mysql-connector-cpp",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/mysql/mysql-connector-cpp.git",
          "tag": "8.0.33",
          "commit": "c3abf648349e1f01c7ec001517af49320855c7d4"
        }
      ],
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_PREFIX=/app",
        "-DBUILD_STATIC_LIBS=OFF",
        "-DBUILD_EXAMPLES=OFF",
        "-DWITH_JDBC=ON"
      ],
      "cleanup": [
        "/bin",
        "/share"
      ]
    },
    {
      "name": "${PROJECT_NAME}",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DMySQL_INCLUDE_DIRS=/app/include/jdbc",
        "-DMySQL_LIBRARIES=/app/lib64/libmysqlcppconn.so"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "${CMAKE_SOURCE_DIR}"
        }
      ]
    }
  ]
}
