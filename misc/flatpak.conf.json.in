{
  "id": "${FLATPAK_PROJECT_URL}",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "24.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "${PROJECT_BINARY_NAME}",
  "modules": [
    {
      "name": "boost",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "archive",
          "url": "https://archives.boost.io/release/1.88.0/source/boost_1_88_0.tar.bz2",
          "sha256": "46d9d2c06637b219270877c9e16155cbd015b6dc84349af064c088e9b5b12f7b"
        }
      ],
      "build-commands": [
        "./bootstrap.sh",
        "./b2 --prefix=/app -j$(nproc) threading=multi --with-system --with-thread --with-chrono --with-date_time install"
      ]
    },
    {
      "name": "libtirpc",
      "buildsystem": "autotools",
      "builddir": true,
      "sources": [
        {
          "type": "archive",
          "url": "https://downloads.sourceforge.net/project/libtirpc/libtirpc/1.3.4/libtirpc-1.3.4.tar.bz2",
          "sha256": "1e0b0c7231c5fa122e06c0609a76723664d068b0dba3b8219b63e6340b347860"
        }
      ],
      "config-opts": [
        "--disable-gssapi",
        "--prefix=/app"
      ],
      "cleanup": [
        "/bin",
        "/share",
        "*.la",
        "*.a"
      ]
    },
    {
      "name": "libmysqlclient",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "sources": [
         {
          "type": "git",
          "url": "https://github.com/mysql/mysql-server.git",
          "branch": "mysql-9.3.0",
          "x-checker-data": {
            "type": "git",
            "tag-pattern": "^mysql-9\\.3\\..*$"
          }
        }
      ],
      "cmake": true,
      "config-opts": [
        "-DWITH_UNIT_TESTS=OFF",
        "-DWITHOUT_SERVER=ON",
        "-DWITH_SSL=system",
        "-DWITH_ZLIB=system",
        "-DWITH_LIBWRAP=OFF",
        "-DCMAKE_INSTALL_PREFIX=/app"
      ],
      "cleanup": [
        "/bin",
        "/lib/mysql/plugin",
        "/share",
        "*.la",
        "*.pdb"
      ]
    },
    {
      "name": "mysql-connector-cpp",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/mysql/mysql-connector-cpp.git",
          "tag": "9.3.0",
          "commit": "9aa75cf2f6337a1f69e87be7ded9402f5b6b87c9"
        }
      ],
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_PREFIX=/app",
        "-DBUILD_STATIC_LIBS=OFF",
        "-DBUILD_EXAMPLES=OFF",
        "-DWITH_JDBC=ON"
      ],
      "cleanup": [
        "/bin",
        "/share"
      ]
    },
    {
      "name": "${PROJECT_NAME}",
      "buildsystem": "cmake",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_PREFIX=/app",
        "-DMySQL_INCLUDE_DIRS=/app/include/jdbc",
        "-DMySQL_LIBRARIES=/app/lib64/libmysqlcppconn.so"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "${CMAKE_SOURCE_DIR}"
        }
      ]
    }
  ],
  "finish-args": [
    "--env=LD_LIBRARY_PATH=/app/lib:/app/lib64",
    "--share=network"
  ]
}
